<a class="skip-navigation" tabindex="1"
   href="#main-content">{{t 'skip_navigation' }}</a>
<div class="layout">
  <div class="layout__head">
    <header class="topbar container is-hidden {{#if settings.hero_show_image}}topbar--image{{/if}}" data-topbar>
      <div class="container-inner topbar__container-inner">
        <div class="topbar__inner">
          <div class="topbar__col clearfix">
            <div class="logo-wrapper">
              <div class="logo">
                {{#link 'help_center'}}
                <img src="{{settings.logo}}" alt="{{t 'logo'}}" /> {{/link}}
              </div>
            </div>
            {{#if settings.toggle_help_center_title}}
              <p class="help-center-name">
                {{#if settings.toggle_translations}}
                  {{dc settings.help_center_title}}
                {{else}}
                  {{settings.help_center_title}}
                {{/if}}
              </p>
            {{/if}}
            <button type="button" role="button" aria-label="Toggle Navigation" class="lines-button x" data-toggle-menu>
              <span class="lines"></span> </button>
          </div>
          <div class="topbar__col topbar__menu">
            <div class="topbar__collapse" data-menu>
              <div class="topbar__controls">
                <div class="topbar__search">
                  {{search instant=true placeholder=settings.search_placeholder class="topbar__search-bar is-hidden"}}
                  <button type="button" role="button" class="topbar__btn-search">
                    <svg xmlns="http://www.w3.org/2000/svg" width="23" height="24" viewBox="0 0 23 24">
                      <g fill="none" fill-rule="evenodd" transform="translate(-6 -2)">
                        <circle cx="19.889" cy="11.611" r="8" stroke="#BDBDBD" stroke-width="2"
                          transform="rotate(45 19.89 11.61)" />
                        <path fill="#BDBDBD" fill-rule="nonzero"
                          d="M9.34328327,15.6566781 L11.3432833,15.6566781 L11.3432833,25.6606781 C11.3432833,26.2106781 10.8992833,26.6566781 10.3432833,26.6566781 C9.79128327,26.6566781 9.34328327,26.2116781 9.34328327,25.6606781 L9.34328327,15.6566781 Z"
                          transform="rotate(45 10.343 21.157)" />
                      </g>
                    </svg>
                  </button>
                </div>
                {{#if alternative_locales}}
                  <div class="dropdown language-selector" aria-haspopup="true">
                    <a class="dropdown-toggle topbar__link">
                      {{current_locale.name}}
                    </a>
                    <span class="dropdown-menu" role="menu">
                      {{#each alternative_locales}}
                        <a href="{{url}}" dir="{{direction}}" rel="nofollow" role="menuitem">
                          {{name}}
                        </a>
                      {{/each}}
                    </span>
                  </div>
                {{/if}}
                {{link 'new_request' class='btn btn--topbar'}}
                {{#if signed_in}}
                  <div id="user" class="dropdown user-info" aria-haspopup="true">
                    <button class="dropdown-toggle dropdown-toggle--user">
                      {{user_avatar class="lt-user-avatar lt-user-avatar--topbar lt-me-2"}}
                      {{user_name class="user-name"}}
                    </button>
                    <div class="dropdown-menu" role="menu">
                      {{link "my_activities" role="menuitem"}}
                      {{my_profile role="menuitem"}}
                      {{change_password role="menuitem"}}
                      {{link "sign_out" role="menuitem"}}
                    </div>
                  </div>
                {{else}}
                  {{#link "sign_in" class='topbar__link'}}
                    {{t 'sign_in'}}
                  {{/link}}
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="hero-unit is-hidden" data-hero-unit>
        <div class="container-inner search-box search-box--hero-unit" data-search-box>
          <div class="hero-unit__title">
            {{#if settings.toggle_translations}}
              {{dc settings.hero_title}}
            {{else}}
              {{settings.hero_title}}
            {{/if}}
          </div>
          {{search instant=true placeholder=settings.search_placeholder}}
        </div>
      </div>
    </header>
  </div>
  <div class="layout__content">